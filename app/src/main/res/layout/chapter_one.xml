<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chapterOne"
        app:layout_constraintDimensionRatio="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.aven.demo.testdemo.androidanim.ChapterOneView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:visibility="gone"
        />

    <com.aven.demo.testdemo.androidanim.view.FingerRedView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        />
    <com.aven.demo.testdemo.androidanim.view.SpiderView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:visibility="gone"
        />

    <com.aven.demo.testdemo.androidanim.view.CutRegionView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</android.support.constraint.ConstraintLayout>