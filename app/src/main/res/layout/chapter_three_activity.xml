<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_value_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="valueAnimator"
        />

    <Button
        android:id="@+id/btn_value_argb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_value_click"
        android:text="argbAnimator"/>

    <Button
        android:id="@+id/btn_value_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_value_argb"
        android:text="charAnimator"/>

    <Button
        android:id="@+id/btn_value_free_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/btn_value_char"
        android:text="freefall"/>

    <ImageView
        android:id="@+id/iv_free_fail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_value_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_value_click"
        android:text="valueanim"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorAccent"
        />

    <com.aven.demo.testdemo.androidanim.view.ValueAnimLoadingView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>